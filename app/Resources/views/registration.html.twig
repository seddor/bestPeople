{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>Лучшие люди интернета</h1>
            {#<div align="right">#}
                {#<button type="button" class="btn btn-lg btn-primary">Войти</button>#}
                {#<a href={{ path('registration') }}><button type="button" class="btn btn-lg btn-default">Зарегистрироваться</button></a>#}
            {#</div>#}
        </div>
    </div>
    <div class="container" align="center">
        <form id="newUserForm" autocomplete="off" action="{{ path('registration') }}"
              method="post" name="registrationForm" {{ form_enctype(imageForm) }}>

            <div class="input-group">
                <input type="text" class="form-control" name="_username" placeholder="Логин" aria-describedby="basic-addon1" required>
            </div>

            <div class="input-group">
                <input type="password" class="form-control" name="_password" placeholder="Пароль" aria-describedby="basic-addon1">
            </div>

            <div class="input-group">
                <select name="_gender">
                    <option value="male">Мужской</option>
                    <option value="female">Женский</option>
                </select>
            </div>

            {{ form_widget(imageForm) }}

            <button type="submit" class="btn btn-default">Зарегистрироваться</button>
        </form>

    </div>
{% endblock %}