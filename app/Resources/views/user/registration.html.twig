{% extends 'base.html.twig' %}

{% block body %}


    <div class="container" align="center">
        {% if error is defined %}
        <div class="container">
            <div class="alert alert-danger" role="alert">{{ error }}</div>
        </div>
        {% endif %}

        <form id="newUserForm" autocomplete="off" action="{{ path('registration') }}"
              method="post" name="registrationForm" {{ form_enctype(imageForm) }}>

            <div class="input-group">
                <input type="text" class="form-control" name="_username" placeholder="Логин" pattern="[A-Za-z0-9]{4,15}" aria-describedby="basic-addon1" required>
            </div>

            <div class="input-group">
                <input type="password" class="form-control" name="_password" placeholder="Пароль" pattern="[A-Za-z]{6,25}" aria-describedby="basic-addon1" required>
            </div>

            <div class="input-group">
                <select name="_gender">
                    <option value="male">Мужской</option>
                    <option value="female">Женский</option>
                </select>
            </div>

            {{ form_widget(imageForm) }}

            <button type="submit" class="btn btn-default">Зарегистрироваться</button>
        </form>

    </div>
{% endblock %}