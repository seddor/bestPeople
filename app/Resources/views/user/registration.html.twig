{% extends 'base.html.twig' %}

{% block body %}


    <div class="container" align="center">
        {% if error is defined %}
        <div class="container">
            <div class="alert alert-danger" role="alert">{{ error }}</div>
        </div>
        {% endif %}

        <form id="newUserForm" autocomplete="off" action="{{ path('registration') }}"
              method="post" name="registrationForm" {{ form_enctype(imageForm) }}>

            <div class="input-group">
                <input type="text" class="form-control" name="_username" placeholder="Логин" pattern="[A-Za-z0-9]{4,15}" aria-describedby="basic-addon1" required>
            </div>

            <div class="input-group">
                <input type="password" id="password" class="form-control" name="_password" placeholder="Пароль" pattern="([A-Za-z0-9]){5,25}" aria-describedby="basic-addon1" required>
                <button type="button" onclick="showPassword()" class="btn btn-default">Показать пароль</button>
            </div>

            <div class="input-group">
                <select name="_gender">
                    <option value="male">Мужской</option>
                    <option value="female">Женский</option>
                </select>
            </div>

            <div class="input-group">
                {{ form_start(imageForm) }}
                <div hidden>  {{ form_errors(imageForm.file) }} </div>
                {{ form_widget(imageForm.file) }}

            </div>

            <button type="submit" class="btn btn-default">Зарегистрироваться</button>
            {{ form_end(imageForm) }}
        </form>
    </div>

    <script>

        function showPassword() {
            ( $('#password').attr('type') == 'password' )
            ? $('#password').attr({'type':'text'})
            :$('#password').attr({'type':'password'});
        }

    </script>
{% endblock %}