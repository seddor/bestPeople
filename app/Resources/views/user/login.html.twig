{% extends 'base.html.twig' %}

{% block body %}


    <div class="container" align="center">

        {% if error is defined %}
            <div class="container">
                <div class="alert alert-danger" role="alert">{{ error }}</div>
            </div>
        {% endif %}

        <form id="loginForm" autocomplete="off" action="{{ path('login_form') }}"
              method="post" name="loginForm">

            <div class="input-group">
                <input type="text" class="form-control" name="_username" placeholder="Логин" aria-describedby="basic-addon1" required>
            </div>

            <div class="input-group">
                <input type="password" class="form-control" name="_password" placeholder="Пароль" aria-describedby="basic-addon1">
            </div>

            <div class="input-group">
                {{ form_start(captcha) }}
                <div hidden>  {{ form_errors(captcha.captcha) }} </div>
                {{ form_widget(captcha.captcha) }}

            </div>

            <button type="submit" class="btn btn-default">Войти</button>
            {{ form_end(captcha) }}
        </form>

    </div>
{% endblock %}